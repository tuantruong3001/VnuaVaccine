@{
    var session = (VnuaVaccine.Common.UserLogin)Session[VnuaVaccine.Common.SessionConstants.USER_SESSION];
    if (session == null || session.RoleId == 1)
    {
        Response.Redirect("~/Home/Index");
    }
}
<style>
    .status-link {
        text-decoration: none;
    }

    .pending {
        color: #ffc107;
    }

    .confirmed {
        color: #198754;
    }

    .rejected {
        color: #dc3545;
    }
</style>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h2 class="m-0 font-weight-bold text-primary" style="text-align:center;">Danh sách lịch tiêm</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Index", "VaccineSchedule", FormMethod.Get))
                    {
                        <div class="form-group">
                            @Html.Label("Search:", new { @class = "control-label" })
                            @Html.TextBox("searchString", null, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Search for..." })
                        </div>

                        <button type="submit" class="btn btn-primary"><i class="bi-funnel-fill"></i> Tìm kiếm</button>
                        <hr>
                    }
                    <div class="table-responsive">
                        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <table style="text-align:center" class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Tên bệnh nhân</th>
                                        <th>Số lượng</th>
                                        <th>Tên vaccine</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày tiêm</th>
                                        <th>Ngày đặt lịch</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count == 0)
                                    {

                                        <tr>
                                            <td colspan="9" class="text-center">Không có dữ liệu</td>
                                        </tr>
                                    }
                                    @if (Model.Count != 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr id="row_@item.ID">
                                                <td>@item.IdVaccine</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.IdPatient</td>
                                                <td>
                                                    <a class="status-link @(item.Status == 0 ? "pending" : (item.Status == 1 ? "confirmed" : "rejected"))" data-id="@item.ID">
                                                        @(item.Status == 0 ? "Chờ xác nhận" : (item.Status == 1 ? "Đã xác nhận" : "Đã từ chối"))
                                                    </a>
                                                </td>

                                                <td>@(item.Time == null ? "" : item.Time.Value.ToString("dd/MM/yyyy"))</td>
                                                <td>@(item.CreateAt == null ? "" : item.CreateAt.Value.ToString("dd/MM/yyyy"))</td>

                                                <td>
                                                    <a class="btn btn-success" style="text-decoration:none; " href="/Admin/VaccineData/Edit/@item.ID"><i class="fa fa-edit"></i> Edit</a>
                                                    <a style="text-decoration: none;" href="@Url.Action("Delete", "VaccineData", new { id = item.ID })" class="btn btn-danger" onclick="return confirm('Xác nhận xoá?')"><i class="fas fa-trash"></i> Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>

                            </table>
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, }))

                        </div>

                        <div class="input-group-append">
                            <a class="btn btn-primary" href="/Admin/VaccineData/Create"><i class="bi-plus-circle"></i> Add Vaccine</a>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>
</div>

