@{
    var session = (VnuaVaccine.Common.UserLogin)Session[VnuaVaccine.Common.SessionConstants.USER_SESSION];
    if (session == null || session.RoleId == 1)
    {
        Response.Redirect("~/Home/Index");
    }
}
<div class="row">
    <div class="col-lg-12">
        @if (TempData["UserMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                </button> <h5><i class="icon fas fa-check"></i> @TempData["UserMessage"]</h5>
            </div>
        }
        @if (TempData["EditUserMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                </button> <h5><i class="icon fas fa-check"></i> @TempData["EditUserMessage"]</h5>
            </div>
        }
        @if (TempData["DeleteUserMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                </button> <h5><i class="icon fas fa-check"></i> @TempData["DeleteUserMessage"]</h5>
            </div>
        }
        <div class="panel panel-default">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h2 class="m-0 font-weight-bold text-primary" style="text-align:center;">Danh sách Vaccines</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Index", "VaccineData", FormMethod.Get))
                    {
                        <div class="form-group">
                            @Html.Label("Search:", new { @class = "control-label" })
                            @Html.TextBox("searchString", null, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Search for..." })
                        </div>

                        <button type="submit" class="btn btn-primary"><i class="bi-funnel-fill"></i> Tìm kiếm</button>
                        <hr>
                    }
                    <div class="table-responsive">
                        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <table style="text-align:center" class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Tên Vaccine</th>
                                        <th>Cơ sở sản xuất</th>
                                        <th>Số lượng</th>
                                        <th>Mô tả</th>
                                        <th>Ảnh</th>
                                        <th>Ngày nhập</th>
                                        <th>Ngày hết hạn</th>
                                        <th>Ghi chú</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count == 0)
                                    {

                                        <tr>
                                            <td colspan="9" class="text-center">Không có dữ liệu</td>
                                        </tr>
                                    }
                                    @if (Model.Count != 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr id="row_@item.ID">
                                                <td>@item.NameVaccine</td>
                                                <td>@item.Munafacturer</td>
                                                <td>@item.QuantityStock</td>
                                                <td>@item.Description</td>
                                                <td><img style="width: 100px; height: auto;" src="@item.Path"></td>
                                                <td>@(item.ProductionDate == null ? "" : item.ProductionDate.Value.ToString("dd/MM/yyyy"))</td>
                                                <td>@(item.ExpirationData == null ? "" : item.ExpirationData.Value.ToString("dd/MM/yyyy"))</td>
                                                <td>@item.Note</td>
                                                <td>
                                                    <a class="btn btn-success" style="text-decoration:none; " href="/Admin/VaccineData/Edit/@item.ID"><i class="fa fa-edit"></i> Edit</a>
                                                    <a style="text-decoration: none;" href="@Url.Action("Delete", "VaccineData", new { id = item.ID })" class="btn btn-danger" onclick="return confirm('Xác nhận xoá?')"><i class="fas fa-trash"></i> Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>

                            </table>
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewBag.SearchString }))

                        </div>

                        <div class="input-group-append">
                            <a class="btn btn-primary" href="/Admin/VaccineData/Create"><i class="bi-plus-circle"></i> Add Vaccine</a>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>
</div>
