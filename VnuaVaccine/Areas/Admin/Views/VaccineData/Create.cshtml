@section bodymain{

    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            @Html.AntiForgeryToken()
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="card shadow mb-4">
                        <div class="p-5">
                            <div class="card-header py-3">
                                <h2 class="m-0 font-weight-bold text-primary" style="text-align:center;">Add Vaccine</h2>
                            </div>
                            @using (Html.BeginForm("Create", "VaccineData", FormMethod.Post))
                            {
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                                <div class="form-group">
                                    NameVaccine
                                    @Html.TextBoxFor(model => model.NameVaccine, new { @class = "form-control form-control-user", @autofocus = "autofocus", @placeholder = "Type NameVaccine" })

                                </div>
                                <div class="form-group">
                                    Munafacturer
                                    @Html.TextBoxFor(model => model.Munafacturer, new { @class = "form-control form-control-user", @placeholder = "Type Munafacturer" })

                                </div>
                                <div class="form-group">
                                    Description
                                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control form-control-user", @placeholder = "Type Description" })

                                </div>
                                <div class="form-group">
                                    QuantityStock
                                    @Html.TextBoxFor(model => model.QuantityStock, new { @class = "form-control form-control-user", @placeholder = "Type QuantityStock" })

                                </div>
                                <div class="form-group">
                                    Note
                                    @Html.TextBoxFor(model => model.Note, new { @class = "form-control form-control-user", @placeholder = "Type Note" })

                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ProductionDate, new { htmlAttribute = new { @class = "form-control form-control-user" } })
                                    @Html.TextBoxFor(model => model.ProductionDate, "{0:dd/MM/yyyy}", new { @type = "date", @class = "form-control form-control-user" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ExpirationData, new { htmlAttribute = new { @class = "form-control form-control-user" } })
                                    @Html.TextBoxFor(model => model.ExpirationData, "{0:dd/MM/yyyy}", new { @type = "date", @class = "form-control form-control-user" })
                                </div>

                                <div class="form-group">
                                    <div class="col-md-10">
                                        Image
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.Path, new { htmlAttributes = new { @class = "form-control" }, id = "txtImage" })
                                            <a id="btnSelectImage" href="#">Choose Image </a>

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2">
                                        <a href="/Admin/VaccineData/Index" class="btn btn-primary btn-user btn-block icon">
                                            Back
                                        </a>
                                    </div>
                                    <div class="col-md-8"></div>
                                    <div class="col-md-2">
                                        <a>
                                            <input style="background-color: #36b9cc" type="submit" value="Add" class="btn btn-primary btn-user btn-block" />
                                        </a>
                                    </div>
                                </div>
                            }
                            <hr>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
