@{
    var session = (VnuaVaccine.Common.UserLogin)Session[VnuaVaccine.Common.SessionConstants.USER_SESSION];
    if (session == null || session.RoleId == 1)
    {
        Response.Redirect("~/Home/Index");
    }
}
@section bodymain{

    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            @Html.AntiForgeryToken()
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="card shadow mb-4">
                        <div class="p-5">
                            <div class="card-header py-3">
                                <h2 class="m-0 font-weight-bold text-primary" style="text-align:center;">Cập nhật thông tin User</h2>
                            </div>
                            @using (Html.BeginForm("Edit", "UserData", FormMethod.Post))
                            {
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                                <div class="form-group">
                                    UserName
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control form-control-user", @autofocus = "autofocus", @placeholder = "Type UserName" })

                                </div>

                                <div class="form-group">
                                    Email
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-user", @placeholder = "Type Email" })

                                </div>
                                <div class="form-group">
                                    Password
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-user", @placeholder = "Type Password" })

                                </div>
                                <a>
                                    <input style="background-color: #36b9cc" type="submit" value="Update User" class="btn btn-primary btn-user btn-block" />
                                </a>
                            }
                            <hr>
                            <a href="/Admin/UserData/Index" class="btn btn-primary btn-user btn-block icon">
                                Back to list
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



