
@{
    ViewBag.Title = "SaveSuccess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section navlink {
    <li class="nav-item">
        <a class="nav-link active" href="~/Home/Index" onclick="changeColor(this)">Trang chủ</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Home/About" onclick="changeColor(this)">Về chúng tôi</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/ListVaccine/Index" onclick="changeColor(this)">Vaccine</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#" onclick="changeColor(this)">Tin tức</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#section-form" onclick="changeColor(this)">Liên hệ</a>
    </li>
    <script>
        function changeColor(link) {

            var links = document.querySelectorAll('.nav-link');
            // Loại bỏ class active
            links.forEach(function (link) {
                link.classList.remove('active');
            });
            // Thêm class active vào phần tử được chọn
            link.classList.add('active');
        }
    </script>
}

@section body{
    <div class="vh-100 d-flex justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="border border-4 border-primary"></div>
            <div class="card  bg-white shadow p-5">
                <div class="mb-4 text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="text-primary bi bi-check-circle" width="75" height="75"
                         fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
                    </svg>
                </div>
                <div class="text-center">
                    <h1>Cảm ơn bạn!</h1>
                    <p>Chúng tôi đã nhận được yêu cầu đặt lịch tiêm từ bạn. Vui lòng chờ thông báo trong email! </p>
                    <button class="btn btn-primary" onclick="window.location.href='/Admin/Wishlist/Index'">Lịch sử đặt lịch</button>
                </div>
            </div>
        </div>
    </div>
}
@section form{
    <h1 class="text-center wow fadeInUp">Để Lại Lời Nhắn Cho Bác Sĩ</h1>

    <form class="main-form">
        <div class="row mt-5 ">
            <div class="col-12 col-sm-6 py-2 wow fadeInLeft">
                <input type="text" class="form-control" placeholder="Tên đầy đủ">
            </div>
            <div class="col-12 col-sm-6 py-2 wow fadeInRight">
                <input type="text" class="form-control" placeholder="Địa chỉ email..">
            </div>
            <div class="col-12 col-sm-6 py-2 wow fadeInLeft" data-wow-delay="300ms">
                <input type="date" class="form-control">
            </div>
            <div class="col-12 col-sm-6 py-2 wow fadeInRight" data-wow-delay="300ms">
                <select name="departement" id="departement" class="custom-select">
                    <option value="general">Tình Trạng Sức Khoẻ</option>
                    <option value="cardiology">Tốt</option>
                    <option value="dental">Bình Thường</option>
                    <option value="neurology">Xấu</option>
                </select>
            </div>
            <div class="col-12 py-2 wow fadeInUp" data-wow-delay="300ms">
                <input type="text" class="form-control" placeholder="Số điện thoại">
            </div>
            <div class="col-12 py-2 wow fadeInUp" data-wow-delay="300ms">
                <textarea name="message" id="message" class="form-control" rows="6" placeholder="Lời nhắn.."></textarea>
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3 wow zoomIn">Gửi yêu cầu</button>
    </form>
}

