        }

        .container-fluid {
            padding: 0;
        }

        .login {
            color: black !important;
            font-style: italic;
        }

        #icon-addon1 {
            border-top-right-radius: 0.25rem; /* bo góc phải trên */
            border-bottom-right-radius: 0.25rem; /* bo góc phải dưới */
        }
        .dropdown-item:hover {
            color: #fff;
            background-color: #00D9A5;
        }

    </style>
</head>
<body onload="changeColor(document.querySelector('.nav-link.active'))">
    <div class="back-to-top"></div>
    <header>
        @{
            var session = (VnuaVaccine.Common.UserLogin)Session[VnuaVaccine.Common.SessionConstants.USER_SESSION];
        }
        <div class="topbar">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 text-sm">
                        <div class="site-info">
                            <a href="tel:01234455666"><span class="mai-call text-primary"></span> +84 123 4455 6666</a>
                            <span class="divider">|</span>
                            <a href="mailto:cskh-vnua@gmail.com"><span class="mai-mail text-primary"></span> cskh-vnua@gmail.com</a>
                        </div>
                    </div>
                    <div class="col-sm-4 text-right text-sm">
                        <div class="social-mini-button">
                            <a href="#"><span class="mai-logo-facebook-f"></span></a>
                            <a href="#"><span class="mai-logo-twitter"></span></a>
                            <a href="#"><span class="mai-logo-dribbble"></span></a>
                            <a href="#"><span class="mai-logo-instagram"></span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm">
            <div class="container">
                <a class="navbar-brand" href="~/Home/Index"><span class="text-primary">VNUA</span>-Vaccine</a>

                @using (Html.BeginForm("Index", "ListVaccine", FormMethod.Get))
                {
                    <div class="input-group input-navbar">
                        @Html.TextBox("searchString", null, new { @class = "form-control", @placeholder = "Nhập từ khoá..." })
                        <div class="input-group-prepend">
                            <button class="btn btn-primary" id="icon-addon1" type="submit"><span class="mai-search"></span></button>
                        </div>
                    </div>
                }

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupport" aria-controls="navbarSupport" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupport">
                    <ul class="navbar-nav ml-auto">

                        @RenderSection("navlink", required: false)
                        <li class="nav-item dropdown no-arrow">
                            @if (session == null)
                            {
                                <a class="nav-link" href="/Admin/Login/Index">Đăng nhập</a>
                            }
                            else if (session.RoleId == 0)
                            {

                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown"
                                   aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small login">
                                        Hello! @session.Email
                                    </span>

                                </a>
                                <!-- Dropdown - User Information -->
                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" href="/Admin/HomeAdmin">My Profile</a>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Login", new { area = "Admin" })">Logout</a>
                                </div>

                            }
                            else if (session.RoleId == 1)
                            {
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown"
                                   aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small login">
                                        Hello! @session.Email
                                    </span>

                                </a>
                                <!-- Dropdown - User Information -->
                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" href="/Admin/HomeUser">My Profile</a>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Login", new { area = "Admin" })">Logout</a>
                                </div>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderSection("body", required: false)
    <div class="page-section bg-light2" id="section-form">
        <div class="container">
            <h1 class="text-center wow fadeInUp">Để Lại Lời Nhắn Cho Bác Sĩ</h1>

            <form class="main-form">
                <div class="row mt-5 ">
                    <div class="col-12 col-sm-6 py-2 wow fadeInLeft">
                        <input type="text" class="form-control" placeholder="Tên đầy đủ">
                    </div>
                    <div class="col-12 col-sm-6 py-2 wow fadeInRight">
                        <input type="text" class="form-control" placeholder="Địa chỉ email..">
                    </div>
                    <div class="col-12 col-sm-6 py-2 wow fadeInLeft" data-wow-delay="300ms">
                        <input type="date" class="form-control">
                    </div>
                    <div class="col-12 col-sm-6 py-2 wow fadeInRight" data-wow-delay="300ms">
                        <select name="departement" id="departement" class="custom-select">
                            <option value="general">Tình Trạng Sức Khoẻ</option>
                            <option value="cardiology">Tốt</option>
                            <option value="dental">Bình Thường</option>
                            <option value="neurology">Xấu</option>
                        </select>
                    </div>
                    <div class="col-12 py-2 wow fadeInUp" data-wow-delay="300ms">
                        <input type="text" class="form-control" placeholder="Số điện thoại">
                    </div>
                    <div class="col-12 py-2 wow fadeInUp" data-wow-delay="300ms">
                        <textarea name="message" id="message" class="form-control" rows="6" placeholder="Lời nhắn.."></textarea>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary mt-3 wow zoomIn">Gửi yêu cầu</button>
            </form>
        </div>
    </div>
    <footer class="page-footer">
        <div class="container">
            <div class="row px-md-3">
                <div class="col-sm-6 col-lg-3 py-3">
                    <h5>Company</h5>
                    <ul class="footer-menu">
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Career</a></li>
